<li class="grid items-stretch">
  <%= link_to deployment_path(deployment), class: 'bg-stone-800 w-full border border-solid border-stone-400 p-4 text-primary cursor-pointer hover:border-stone-200 hover:bg-stone-700 duration-200 outline-2' do %>
    <h6 class="text-primary type-body-02-semi-bold mb-6 [container-type:inline-size]">
      <span class="block truncate w-[100cqi] font-medium"><%= deployment.name %></span>
    </h6>
    <div class="flex items-center gap-2 h-7">
      <% if health_status %>
        <div class="text-green-500 rounded-md inline-flex gap-2 items-center px-2 h-7 type-label-01 border border-green-500">
          <%= heroicon 'check', class: 'w-4' %>
          All services are up and running
        </div>
      <% else %>
        <div class="rounded-md text-red-500 inline-flex gap-2 items-center px-2 h-7 type-label-01 border border-red-400">
          <%= heroicon 'x-mark', class: 'w-4' %>
          There are issues with some services
        </div>
      <% end %>
    </div>
  <% end %>
</li>
