<li class="grid items-stretch">
  <%= link_to version_path(project.latest_project_version), class: 'cursor-pointer hover:bg-stone-50 w-full border border-solid border-stone-400 p-4 duration-200 flex flex-col gap-4' do %>
    <div class="flex justify-between items-center">
      <h6 class="">
        <%= project.name %>
      </h6>
      <div class="font-mono text-xs flex items-center gap-2">
        <%= project.project_versions.order(created_at: :desc).first.version %>
      </div>
    </div>
    <div class="flex items-center gap-2">
      <div class="rounded-md text-xs flex items-center bg-white rounded">
        <% if project.published_versions.count.zero? %>
          <div class="text-stone-500">No published versions</div>
        <% else %>
          <%= pluralize(project.published_versions.count, 'published version') %>
        <% end %>
      </div>
    </div>
  <% end %>
</li>
