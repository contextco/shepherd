<div class="flex flex-col gap-4 bg-white p-4">
  <div class="flex flex-col gap-2">
    <div class="flex items-center gap-2">
      <div class="font-semibold">Customer Documentation</div>

      <%= link_to doc_path(subscriber), class: 'hover:bg-stone-100 p-1 rounded duration-200' do %>
        <%= heroicon 'arrow-top-right-on-square', class: 'size-4 text-stone-700 stroke-2' %>
      <% end %>
    </div>
    <div class="flex flex-col gap-1">
          <span class="text-sm">
            When ready to begin the initial deployment, provide <span class="font-bold"><%= subscriber.name %></span> with a link to the documentation<%= ' and the password below' if subscriber.auth %>.
          </span>
      <% if subscriber.auth %>
            <span class="text-sm">
              Documentation is password protected to ensure only authorized users can access it.
            </span>
      <% end %>
    </div>
  </div>

  <div class="flex flex-col gap-4">
    <%= render CommandSnippetComponent.new(title: "Documentation", snippet: doc_url(subscriber) ) %>
    <%= render CommandSnippetComponent.new(title: "Password", snippet: subscriber.password ) if subscriber.auth %>
  </div>
</div>
