<div class="w-full whitespace-nowrap px-6 pb-8 pt-6 flex flex-col gap-2 w-full">
  <div class="flex items-center justify-between gap-2">
    <div class="flex items-center gap-1">
      <span class="text-stone-100 font-semibold"><%= name %></span>
      <span class="text-stone-400 text-sm"><%= containers.count %> instances</span>
      <%= heroicon 'chevron-down', class: 'size-5 text-stone-400' %>
    </div>
    <span class="<%= text_classes(current_status) %>"><%= status_text(current_status) %></span>
  </div>

  <div class="flex flex-col w-full gap-4">
    <%= render Containers::IndividualContainerStatusComponent.new(status_bars: group_status_bars) %>
    <div class="flex gap-2 w-full items-center text-sm text-stone-400">
      <span><%= DAYS %> days ago</span>
      <hr class="border-stone-400 w-full">
      <span><%= uptime_percentage %>% uptime</span>
      <hr class="border-stone-400 w-full">
      <span>Today</span>
    </div>
  </div>
  <% containers_statuses.each do |status_bars| %>
    <%= render Containers::IndividualContainerStatusComponent.new(status_bars: status_bars.values.reverse, name: status_bars.values.first[:lifecycle_id] ) %>
  <% end %>
</div>
