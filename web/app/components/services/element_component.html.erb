<li class="grid items-stretch">
  <%= link_to_if enabled?, edit_project_service_path(service) do %>
    <%= content_tag :div, class: ['w-full border border-solid border-stone-400 p-4 duration-200 flex flex-col gap-4', {
      'cursor-pointer hover:bg-stone-50': enabled?,
      'cursor-not-allowed opacity-70': !enabled?
    }] do %>
      <div class="flex justify-between items-center">
        <h6 class="flex items-center gap-2">
          <%= heroicon "squares-2x2", class: "size-4" %>
          <%= service.name %>
        </h6>
        <div class="font-mono text-xs flex items-center gap-2">
          <%= heroicon 'archive-box', class: 'size-4' %>
          <%= service.image %>
        </div>
      </div>

      <div class="flex items-center gap-2">
        <%= render Services::ResourcesViewComponent.new(service:) %>
        <% if service.ingress_port.present? %>
          <div class="border border-stone-300 rounded-md text-sm flex items-center px-1.5 py-0.5 text-stone-700 gap-1 rounded-md">
            <%= heroicon "globe-alt", class: "size-4" %>
            Internet
          </div>
        <% end %>
      </div>
    <% end %>
  <% end %>
</li>
