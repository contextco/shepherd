<li class="grid items-stretch">
  <%= link_to edit_dependency_path(dependency),
              class: "w-full border border-solid border-stone-400 p-4 duration-200 flex flex-col gap-4 #{enabled? ? 'cursor-pointer hover:bg-stone-50' : 'cursor-not-allowed opacity-70'}",
              style: enabled? ? nil : 'pointer-events: none' do %>
    <div class="flex justify-between items-center">
      <h6 class="flex items-center gap-2">
        <%= heroicon dependency.icon, class: 'size-4' %>
        <%= dependency.name %>
      </h6>
      <div class="font-mono text-xs">
        <%= dependency.human_visible_version %>
      </div>
    </div>

    <%= render Services::ResourcesViewComponent.new(service: dependency) %>
  <% end %>
</li>
