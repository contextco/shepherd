<li class="grid items-stretch">
  <%= link_to project_subscriber_path(subscriber), class: 'cursor-pointer hover:bg-stone-50 w-full border border-solid border-stone-400 p-4 duration-200 flex flex-col gap-4' do %>
    <div class="flex justify-between items-center">
      <div class="flex items-center gap-2">
        <h6 class="">
          <%= subscriber.name %>
        </h6>
        <% unless subscriber.auth %>
          <div class="rounded-md text-xs flex items-center bg-stone-700 text-stone-100 px-1.5 rounded-md">
            Public
          </div>
        <% end %>
      </div>
      <div class="font-mono text-xs flex items-center gap-2">
        <%= heroicon 'computer-desktop', class: 'size-4' %>
        <%= subscriber.project.name %>
      </div>
    </div>
    <div class="flex items-center gap-2">
      <div class="rounded-md text-xs flex items-center bg-white rounded">
        <div class="text-stone-500">No active live deployments</div>
      </div>
    </div>
  <% end %>
</li>
