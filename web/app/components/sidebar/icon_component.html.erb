<div class="relative" data-controller="sidebar-icon">
  <%= link_to path,
              data: { action: 'mouseenter->sidebar-icon#showTooltip mouseleave->sidebar-icon#hideTooltip' },
              class: ["rounded-md p-2 text-stone-800 select-none cursor-pointer duration-200 block", {
    "bg-stone-200": current_page?(root_path) || request.path_parameters&.fetch(:controller) == "deployment",
    "hover:bg-stone-200 bg-transparent": !(current_page?(root_path) || request.path_parameters&.fetch(:controller) == "deployment")
  }] do %>
    <%= heroicon icon, class: 'size-6' %>
  <% end %>
  <div class="transition-opacity opacity-0 top-1/2 -translate-y-1/2 left-full ml-2 font-normal text-sm bg-stone-700 p-1 rounded-md text-slate-100 px-2 duration-400 absolute z-50" data-sidebar-icon-target="tooltip">
    <div class="absolute left-0 rotate-45 bg-stone-700 -translate-x-1/3 top-1/2 -translate-y-1/2 size-1.5"></div>
    <%= label %>
  </div>
</div>